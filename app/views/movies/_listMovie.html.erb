<div class="row">
    <% @movies.each do |movie| %>
    <% if current_user.follows?(movie) %>
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
      <div class="thumbnail">
        <img src="<%= movie.image %>" alt="...">
        <div class="caption">
          <h4><%= movie.title %></h4>
          <p><%= movie.release_year %></p>
          <p><%= movie.plot[0..41].gsub(/\s\w+\s*$/, '...') %> <%= link_to "Learn more", movie_path(movie) %></p>
          <p><%= link_to "Remove",  remove_movie_path(movie), :method => :delete , class: "btn btn-danger", role: "button"%> | <%= movie.followers_count %> followers </p>
        </div>
      </div>
    </div>
    <% else %>
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
      <div class="thumbnail">
        <img src="<%= movie.image %>" alt="...">
        <div class="caption">
          <h4><%= movie.title %></h4>
          <p><%= movie.release_year %></p>
          <p><%= movie.plot[0..45].gsub(/\s\w+\s*$/, '...') %> <%= link_to "Learn more", movie_path(movie) %></p>
          <p><%= link_to "Add",  add_movie_path(movie), :method => :post , class: "btn btn-primary", role: "button"%> | <%= movie.followers_count %> followers </p>
        </div>
      </div>
    </div>
   <% end %>
   <% end %>
</div>
